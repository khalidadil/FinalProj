    </ul>
    <hr>
    <div class="specs">
        <a href="http://<%= website %>"><%= name %> Site</a>
    </div>
    <p><%= description %></p>
    <% console.log(tags);
       if (tags[0] !== ""){ %>
    	<div class="tags">
	        <ul>
	            <% if (tags){
	            	for (var loc in tags){ %>
	            	<a href="#<%= category.replace(" ", "_").toLowerCase() %>/<%= subcategory.replace(" ", "_") %>/filter/tag/<%= tags[loc].replace(" ", "_") %>"><li><%= tags[loc] %></li></a>
	            <% 	}
	               } %>
	        </ul>
    	</div>
	<% 	} %>
